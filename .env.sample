TASK_PRIMARY.ENV="local"

TASK_SERVER.PORT="8080"
TASK_SERVER.READ_TIMEOUT="30"
TASK_SERVER.WRITE_TIMEOUT="30"
TASK_SERVER.IDLE_TIMEOUT="60"
TASK_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

TASK_DATABASE.HOST="localhost"
TASK_DATABASE.PORT="5432"
TASK_DATABASE.USER="postgres"
TASK_DATABASE.PASSWORD=""
TASK_DATABASE.NAME="taskManiac"
TASK_DATABASE.SSL_MODE="disable"
TASK_DATABASE.MAX_OPEN_CONNS="25"
TASK_DATABASE.MAX_IDLE_CONNS="25"
TASK_DATABASE.CONN_MAX_LIFETIME="300"
TASK_DATABASE.CONN_MAX_IDLE_TIME="300"

TASK_AUTH.SECRET_KEY="secret"

TASK_INTEGRATION.RESEND_API_KEY="resend_key"

TASK_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
TASK_OBSERVABILITY.SERVICE_NAME="taskManiac"
TASK_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
TASK_OBSERVABILITY.LOGGING.LEVEL="debug"
TASK_OBSERVABILITY.LOGGING.FORMAT="console"
TASK_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
TASK_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TASK_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
TASK_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
TASK_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
TASK_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
TASK_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
TASK_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
TASK_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"